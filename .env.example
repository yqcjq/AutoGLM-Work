# Phone Agent Configuration
# Copy this file to .env and fill in your values

# Model API Configuration
PHONE_AGENT_BASE_URL=your-base-url-here
PHONE_AGENT_MODEL=your-model-here
PHONE_AGENT_API_KEY=your-api-key-here

# Agent Configuration
PHONE_AGENT_MAX_STEPS=20
PHONE_AGENT_LANG=cn

# Device Configuration
PHONE_AGENT_DEVICE_TYPE=adb
# PHONE_AGENT_DEVICE_ID=your-device-id

# RAG (Retrieval-Augmented Generation) Configuration
PHONE_AGENT_RAG_ENABLED=false
PHONE_AGENT_RAG_ON_START=true
PHONE_AGENT_RAG_ON_ERROR=true

# Embedding Model Configuration
PHONE_AGENT_EMBEDDING_BASE_URL=your-embedding-base-url-here
PHONE_AGENT_EMBEDDING_API_KEY=your-embedding-api-key-here
PHONE_AGENT_EMBEDDING_MODEL=text-embedding-3-small
PHONE_AGENT_EMBEDDING_DIMENSIONS=1536
PHONE_AGENT_EMBEDDING_BATCH_SIZE=32

# Vector Store Configuration
PHONE_AGENT_VECTOR_STORE_PATH=./data/chroma_db
PHONE_AGENT_VECTOR_COLLECTION=phone_agent_knowledge

# Retriever Configuration
PHONE_AGENT_RAG_TOP_K=3
PHONE_AGENT_RAG_SCORE_THRESHOLD=0.7
PHONE_AGENT_RAG_SEARCH_TYPE=similarity

# Scoring Model Configuration (for task evaluation)
PHONE_AGENT_SCORING_BASE_URL=your-scoring-base-url-here
PHONE_AGENT_SCORING_MODEL=your-scoring-model-here
PHONE_AGENT_SCORING_API_KEY=your-scoring-api-key-here

